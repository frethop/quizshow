<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/new_player_dialog"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="10dp" 
  android:orientation="vertical">
  
    <TextView 
    	android:text="Name:" 
    	android:id="@+id/new_player_name_label" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content">
    </TextView>
    <EditText 
    	android:layout_width="match_parent" 
    	android:text="" 
    	android:id="@+id/new_player_name" 
    	android:contentDescription="new_player_name" 
    	android:layout_height="wrap_content">
    </EditText>
    <LinearLayout
  		android:id="@+id/new_player_dialog_button_container"
  		android:orientation="horizontal"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:padding="10dp">
	    <Button
	        android:id="@+id/create_new_player_button"
	        android:text="Create"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp">
	    </Button>
	    <Button
	        android:id="@+id/cancel_new_player_button"
	        android:text="Cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp">
	    </Button>
	</LinearLayout>
  
  
</LinearLayout>
